@model Shopping.MVCWebUI.Models.ShippingDetails
@{
    ViewBag.Title = "CheckOut";
}

@if (TempData["fullNameError"] != null)
{
    <div class="alert alert-danger">
        <h4>@TempData["fullNameError"]<i class="fas fa-exclamation" style="font-size: 28px;"></i></h4>
    </div>
}
@if (ViewBag.message == "success")
{
    <div class="alert alert-success">
        <h4>Siparişiniz tamamlandı ve onay için beklemede <i class="fas fa-exclamation" style="font-size: 28px;"></i></h4>
    </div>
}
else if (ViewBag.message == "error")
{
    <div class="alert alert-danger">
        <h4>Bir Hata Oluştu <i class="fas fa-exclamation" style="font-size: 28px;"></i></h4>
        <h4>@ViewBag.mailException</h4>
    </div>
}
<div class="row">
    <div class="col-md-12">
        <h2>Sipariş Bilgileriniz</h2>
        Lütfen Sipariş Bilgilerinizi Doldurunuz
        <hr />

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary()
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Kullanıcı Adı</label>
                <div class="col-sm-6">
                    <div class="badge badge-info">@User.Identity.Name</div>
                    <input type="hidden" name="UserName" value="@User.Identity.Name" />
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Adı Soyadı</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(shipping => shipping.FullName, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Şehir</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(shipping => shipping.City, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">İlçe</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(shipping => shipping.District, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Adres</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(shipping => shipping.Address, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">E-mail</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(shipping => shipping.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Telefon </label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(shipping => shipping.PhoneNumber, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Ödeme Yöntemi</label>
                <div class="col-sm-6">
                    @Html.TextBoxFor(shipping => shipping.PaymentMethod, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-primary btn-sm">Onayla</button>
                </div>
            </div>
        }
    </div>
</div>


<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>