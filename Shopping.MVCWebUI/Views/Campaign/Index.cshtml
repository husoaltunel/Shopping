@model IEnumerable<Shopping.MVCWebUI.Entity.Campaign>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kampanya Listesi</h2>
<hr />
<p>
    @Html.ActionLink("Yeni kampanya oluştur", "Create", null, new { @class = "btn btn-primary btn-sm" })
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscountPercent)
            </th>
            <th></th>
        </tr>
    </thead>
@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Id)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DueDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DiscountPercent)
    </td>
    <td>
        @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
        @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-md" })
    </td>
</tr>
}

</table>
